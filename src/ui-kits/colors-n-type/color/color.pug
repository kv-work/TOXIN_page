include ./__sample/sample
include ./__name/name

mixin color(color, colorName, opacity)
	-
		var className="color"+" "+"color_coloris_"+colorName.toLowerCase()
		if (opacity) {
			switch (opacity) {
				case "100%" :
					className += " "+"color_opacity"+"_100"
					break
				case "75%" :
					className += " "+"color_opacity"+"_75"
					break
			}
		}
	div(class=className)
		+sample(color)
		+name(color, colorName, opacity)
