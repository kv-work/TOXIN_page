extends ../../base/base_fix

block variables
  include ./__input/input
  include ../logo/logo
  include ./__dropdown/dropdown
  include ./__datepicker/datepicker

  - var pageTitle = 'Form-elements'

  mixin inputWrapper(params)
    - var {style, text, placeholder, masked = false} = params

    div.input_wrapper( class=style.split(' / ').join('_') )
      span.style=style.toUpperCase()
      +input( {label: text, placeholder: placeholder, masked: masked} )&attributes(attributes)


block content


  .form_elements
    .logo_wrapper
      +logo({width: "48", height: "48", fill: "#1F2041", fillOpacity: ".25"})
    .block_inputs
      +inputWrapper({style: "default", text: "text field", placeholder: "Email"})
      +inputWrapper({style: "hover / focus", text: "text field", placeholder: "This is pretty awesome"})(class="form_input__input_isFocused")

      .dropdown_wrapper.default
        span.style DEFAULT
        +dropdown({label:"dropdown", text: "Сколько гостей", items:["Взрослые", "Дети", "Младенцы"]})
      
      +inputWrapper({style: "default", text: "masked text field", placeholder: "ДД.ММ.ГГГГ", masked: true})

      .datepicker_wrapper
        +datepicker({label: "date dropdown"})
        +datepicker({label: "date dropdown"})

      .datepicker_ranged_wrapper
        +datepicker( {label: "filtered date dropdown", ranged: true} )