mixin radio(params = {})
  -
    const { list: { label, checked = false }, value } = params;
    let labelClass = "radio_buttons__radio_label";
    if (checked)
      labelClass += " radio_buttons__radio_label_checked";
  
  label.radio_buttons__radio(class=labelClass)=label
    input.radio_buttons__radio_input(type="radio" name="gender" checked=checked value=value)