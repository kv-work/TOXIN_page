mixin dropdown(params = {})
  -
    const { label, text, items, multiple = false, opened = false } = params;
    let classList = (multiple) ? 'js-dropdown_multiple' : 'js-dropdown';
    if (opened) {
      classList += ' menu-open'
    }

  .dropdown
    label.dropdown__label= label
    .iqdropdown(class=classList)
      .iqdropdown-selection-wrapper
        p.iqdropdown-selection= text
        .iqdropdown-menu
          each item, index in items
              - const { itemLabel, itemCount = 0 } = item;

              .iqdropdown-menu-option(data-id=`item-${index + 1}` data-defaultcount=itemCount)
                div
                  p.iqdropdown-item= itemLabel
