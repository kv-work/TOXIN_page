mixin navBarItem(params)
  -
    var {label, isNestedList=false, nestedItems=[]} = params
    var classList = "nav_bar__item"
    if (isNestedList)
      classList += "_nested"

  
  if isNestedList
    li.nav_bar__item_nested=label
      ul.nav_bar__nested_list
        each item in nestedItems
          +navBarItem(item)
  else
    li.nav_bar__item
      a.nav_bar__item_link(href=`/${label}`)=label


mixin navBar(params)
  -
    var {itemList, display="vertical"} = params
    classList = "nav_bar"
    if (display == "vertical")
      classList += " nav_bar_vertical"

  ul(class=classList)
    each item in itemList
      +navBarItem(item)
