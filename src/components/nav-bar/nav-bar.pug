include nav-bar-item/nav-bar-item

mixin navBar(params = {})
  -
    const { itemList, display = 'vertical', lang = 'en' } = params;
    let classList = 'nav_bar';
    if (lang === 'ru')
      classList += ' nav_bar_ru';
    if (display === 'vertical')
      classList += ' nav_bar_vertical';

  ul(class=classList)
    each item in itemList
      +navBarItem(item)
