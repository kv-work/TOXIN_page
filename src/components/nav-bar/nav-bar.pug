mixin navBarItem(params)
  -
    var {label, isNestedList=false, nestedItems=[]} = params
    var classList = "nav_bar__item"
    if (isNestedList)
      classList += "_nested"

  li.nav_bar__item=label
    if isNestedList
      ul.nav_bar__item_nested_list
        each item in nestedItems
          +navBarItem(item)


mixin navBar(params)
  -
    var {itemList, display="vertical"} = params
    classList = "nav_bar"
    if (display == "horizontal")
      classList += "_horizontal"

  ul(class=classList)
    each item in itemList
      +navBarItem(item)


