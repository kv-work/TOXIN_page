mixin button(params)
  -
    var {label, type="button", style, disabled = false, arrow = false} = params
    var classList = "button"
    if (style == "filled") 
      classList += " button_filled"
    if (style == "no borders")
      classList += " button_no_borders"
    if (disabled) {
      classList += " button_disabled"
    }
    if (arrow) {
      classList += " button_with_arrow"
    }
  
  button(class=classList type=type)=label
    if (arrow)
      i.material-icons arrow_forward