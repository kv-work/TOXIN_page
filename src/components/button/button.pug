mixin button(params = {})
  -
    const { label = "", type="button", disabled = false, filled = false, withArrow = false, withBorders = true } = params;
    let classList = "button";
    if (filled) 
      classList += " button_filled";
    if (!withBorders)
      classList += " button_no_borders";
    if (disabled) {
      classList += " button_disabled";
    }
    if (withArrow) {
      classList += " button_with-arrow";
    }
  
  button(class=classList type=type)=label
    if (arrow)
      i.material-icons arrow_forward