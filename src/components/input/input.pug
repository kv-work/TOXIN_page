mixin input(params = {})
  -
    const {
      label = '',
      type = 'text',
      name = 'name',
      placeholder,
      masked = false,
      subscription = false,
      focused = false,
      required = false,
    } = params;
    let classList = 'input__input';
    let modClass = '';
    if (masked) {
      modClass += ' input_masked';
      classList += ' js-input__input_masked';
    }
    if (subscription) {
      modClass += ' input_with-subscription';
    }
    if (focused) {
      classList += ' input__input_focused';
    }

  .input(class=modClass)
    if (label)
      label.input__label= label
    input(
      class=classList
      name=name
      type=type
      placeholder=placeholder
      required=required
      )
