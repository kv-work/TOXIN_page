mixin rateButton(params = {})
  -
    const { name, rate = 4, disabled = false } = params;
    let n = 1;
    const className = disabled ? 'rate-button_disabled js-rate-button' : 'js-rate-button';

  .rate-button(class=className data-rate=rate)
    while n < 6
      - n += 1;

      input.rate-button__input.js-rate-button__input(type="radio" name=name checked=(n === rate) disabled=disabled)
