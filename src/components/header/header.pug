include ../button/button
include ../nav-bar/nav-bar
include ../logo/logo

mixin header(params = {})
  -
    const { lang = 'en', isLoggedIn = false, userName } = params;
    let currData;
    if (lang === 'en') {
      currData = data.dataEn.header;
    } else {
      currData = data.dataRu.header;
    }
    const { navigationList, loginLabel, regLabel } = currData;
    let classList = 'header';
    if (isLoggedIn) {
      classList += ' header_logged_in';
    }

  header(class=classList)
    .header__elements
      a.header__logo(href="./")
        img(src="./img/logo.svg" alt="TOXIN")
      nav.header__nav-bar
        +navBar({ itemList: navigationList, display: 'horizontal', lang })
      if (isLoggedIn)
        span.header__user-name= userName
      else
        .header__buttons
          a.header__login-button(href="./login-page.html")
            +button({ label: loginLabel, theme: 'outline' })
          a.header__registration-button(href="./registration-page.html")
            +button({ label: regLabel, theme: 'filled' })
