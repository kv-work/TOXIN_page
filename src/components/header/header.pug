include ../button/button
include ../nav-bar/nav-bar
include ../logo/logo

mixin header(params)
  -
    var {lang="en", isLoggedIn=false, userName } = params
    if (lang == "en")
      var currData = data.dataEn.header
    else if (lang == "ru")
      var currData = data.dataRu.header

    var { navigationList, loginLabel, regLabel } = currData
    
    var classList = "header"

    if (isLoggedIn)
      classList += " header_logged_in"

  header(class=classList)
    .header__elements
      .header__logo
        img(src=require('../../img/Logo.svg').default alt="TOXIN")
      nav.header__nav_bar
        +navBar({itemList: navigationList, display: "horizontal"})

      if isLoggedIn
        span.header__user_name=userName
      else
        .header__buttons
          a.header__login_button(href="/mock-address/change-me")
            +button({
              label: loginLabel,
              style: "no fill"
              })
          a.header__registration_button(href="/mock-address/change-me")
            +button({
              label: regLabel,
              style: "filled"
              })
