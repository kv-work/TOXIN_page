extends ../base/base

block variables
  include ../../components/header/header
  include ../../components/navigation-footer/navigation-footer
  include ../../components/room-search-card/room-search-card

  -
    const pageTitle = 'Landing Page';
    const data = htmlWebpackPlugin.options.getData();
    const { headerData, footerData } = data;

block content
  +header({ isLoggedIn: false, headerData })
  .landing.js-landing
    .landing__content
      .landing__form-search-room
        +roomSearchCard({ label: 'Найдем номера под ваши\u00A0пожелания' })
      .landing__slogan Лучшие номера для вашей работы, отдыха и просто вдохновения
  +navigationFooter(footerData)
