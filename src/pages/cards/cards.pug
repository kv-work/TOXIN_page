extends ../base/base

block variables
  include ../../components/logo/logo
  include ../../components/room-search-card/room-search-card
  include ../../components/registration-card/registration-card
  include ../../components/room-rate-card/room-rate-card
  include ../../components/login-card/login-card
  include ../../components/datepicker-block/datepicker-block
  include ../../components/room-card/room-card

  - const pageTitle = 'Cards';

block content
  .cards
    .cards__logo-wrapper
      +logo({ width: '48', height: '48', fill: '#1F2041', fillOpacity: '.25' })
    .cards__grid
      .cards__grid-col
        .cards__wrapper
          +roomSearchCard({ label: 'Найдем номера под ваши\u00A0пожелания' })
        .cards__wrapper
          +registrationCard({ label: 'Регистрация аккаунта' })
      .cards__grid-col
        .cards__wrapper
          +roomRateCard()
        .cards__wrapper
          +loginCard({ label: 'Войти' })
      .cards__grid-col
        .cards__wrapper
          +datepickerBlock({ inline: true })(data-date='19.08.2019' data-value-second='23.08.2019')
        .cards__wrapper
          +roomCard({ number: 888 })
        .cards__wrapper
          +roomCard({ number: 840 })
