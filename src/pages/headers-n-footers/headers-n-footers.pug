extends ../base/base

block variables
  include ../../components/logo/logo
  include ../../components/header/header
  include ../../components/footer/footer
  
  -
    var pageTitle="Headers & Footers"
    data = htmlWebpackPlugin.options.getData()

block content
  .headers_n_footers
    .logo_wrapper
      +logo({width: "48", height: "48", fill: "#1F2041", fillOpacity: ".25"})
    +header( {isLoggedIn: false, navItemList: [
      {label: "Home", active: true},
      {label: "About Us"},
      { label: "Services", isNestedList:true, nestedItems: [
        {label: "service_1"},
        {label: "service_2"} 
        ] }, {label: "Careers"},
      {label: "News"},
      {label: "Documentation"}]  })
    +header( {isLoggedIn: true, navItemList: [
      {label: "Home", active: true},
      {label: "About Us"},
      { label: "Services", isNestedList:true, nestedItems: [
        {label: "service_1"},
        {label: "service_2"} 
      ] },
      {label: "Careers"},
      {label: "News"},
      {label: "Documentation"}],
      userName: "Cosmin Negoita" 
    })
    +footer( {lang: "en", data} )
    +footer( {lang: "en", data, withWidgets: false} )