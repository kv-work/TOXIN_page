block content
  .headers_n_footers
    .logo_wrapper
      +logo({width: "48", height: "48", fill: "#1F2041", fillOpacity: ".25"})
    .headers_n_footers__header
      +header( {isLoggedIn: false, navItemList: [
      {label: "Home"},
      {label: "About Us"},
      { label: "Services", isNestedList:true, nestedItems: [
        {label: "service_1"},
        {label: "service_2"} 
        ] }, {label: "Careers"},
      {label: "News"},
      {label: "Documentation"}]  })
