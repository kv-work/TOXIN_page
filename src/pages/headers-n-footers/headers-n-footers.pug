extends ../base/base

block variables
  include ../../components/logo/logo
  include ../../components/header/header
  include ../../components/footer/footer
  include ../../components/navigation-footer/navigation-footer

  -
    const pageTitle = 'Headers & Footers';
    const data = htmlWebpackPlugin.options.getData();
    const lang = data.lang

block content
  .headers-n-footers
    .headers-n-footers__logo-wrapper
      +logo({ width: '48', height: '48', fill: '#1F2041', fillOpacity: '.25' })
    +header({ lang, isLoggedIn: false, data })
    +header({ lang, isLoggedIn: true, data, userName: 'Cosmin Negoita' })
    +navigationFooter({ lang: 'en', data })
    +footer({ lang, data, withWidgets: false })
