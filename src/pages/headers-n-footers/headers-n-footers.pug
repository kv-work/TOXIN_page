      +header( {isLoggedIn: true, navItemList: [
        {label: "Home"},
        {label: "About Us"},
        { label: "Services", isNestedList:true, nestedItems: [
          {label: "service_1"},
          {label: "service_2"} 
          ] }, {label: "Careers"},
        {label: "News"},
        {label: "Documentation"}],
        userName: "Cosmin Negoita"  })
