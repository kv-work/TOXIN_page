extends ../base/base_fix

block variables
  include ../../components/input/input
  include ../../components/logo/logo
  include ../../components/dropdown/dropdown
  include ../../components/datepicker-block/datepicker-block
  include ../../components/icon-item/icon-item
  include ../../components/checkbox-list/checkbox-list
  include ../../components/bullet-list/bullet-list
  include ../../components/button/button
  include ../../components/radio-buttons/radio-buttons
  include ../../components/toggle-button/toggle-button
  include ../../components/like-button/like-button
  include ../../components/rate-button/rate-button
  include ../../components/range-slider/range-slider
  include ../../components/comment-block/comment-block
  include ../../components/pagination/pagination

  - const pageTitle = 'Form-elements';

block content
  .form_elements
    .logo_wrapper
      +logo({ width: '48', height: '48', fill: '#1F2041', fillOpacity: '.25' })
    .row
      .col
        div.input_wrapper.default
          span.style default
          +input({ label: 'text field', placeholder: 'Email' })
        div.input_wrapper(class="hover_focus")
          span.style.hover_focus hover / focus
          +input({ label: 'text field', placeholder: 'This is pretty awesome' })(class="input__input_focused")
        .dropdown_wrapper.default
          -
            let items = [
              { itemLabel: 'Взрослые', itemCount: 0 },
              { itemLabel: 'Дети', itemCount: 0 },
              { itemLabel: 'Младенцы', itemCount: 0 },
            ];

          span.style default
          +dropdown({ label:'dropdown', text: 'Сколько гостей', items })
        .input_wrapper.default.masked
          span.style default
          +input({ label: 'masked text field', placeholder: 'ДД.ММ.ГГГГ', masked: true })
        .datepickers_wrapper
          +datepickerBlock({ label: 'date dropdown', separated: true, labelSecond: 'date dropdown', valueSecond: '19.08.2019' })
        .datepicker_wrapper_filtered
          +datepickerBlock({ label: 'filter date dropdown', value:'19.08.2019', valueSecond:'23.08.2019' })
        .input_wrapper_with_subscription
          +input({ label: 'subscription text field', placeholder: 'Email', subscription: true })
      .col
        .checkbox_buttons_wrapper
          -
            let list = [
              { label: 'Можно курить' },
              { label:'Можно с питомцами', checked: true },
              { label:'Можно пригласить гостей (до 10 человек)', checked: true },
            ];

          +checkboxList({ checkboxLabel: 'checkbox buttons', list: list })
        .radio_buttons_wrapper
          h3.radio_buttons_label radio buttons
          +radioButtons({
            list: [
              { label: 'Мужчина', checked: true },
              { label: 'Женщина' }
            ]
          })
        .toggle_buttons_wrapper
          h3.toggle_buttons_label toggle
          +toggleButton({ label: 'Получать спецпредложения', checked: true })
          +toggleButton({ label: 'Получать спецпредложения' })
        .like_buttons_wrapper
          h3.like_buttons_label like button
          .like_buttons
            +likeButton({ count: 2 })
            +likeButton({ count: 12, checked: true })
        .rate_buttons_wrapper
          h3.rate_buttons__label rate button
          +rateButton({ name: 'rate_1', rate: 4 })
          +rateButton({ name: 'rate_2', rate: 5 })
      .col
        .range_slider_wrapper
          +rangeSlider({ label: 'range slider', value: [5000, 10000] })
        .buttons_block
          h3.buttons_block_label buttons
          .buttons_block_wrapper
            .buttons_block_buttons
              +button({ label: 'Click me', theme: 'filled' })
              +button({ label: 'Click me', theme: 'filled', disabled: true })
              +button({ label: 'Click me', theme: 'outline' })
              +button({ label: 'Click me', theme: 'outline', disabled: true })
              .buttons_block_theme_text
                +button({ label: 'Click me', theme: 'text' })
                +button({ label: 'Click me', theme: 'text', disabled: true })
            .buttons_block_with_arrow
              +button({ label: 'Перейти к оплате', theme: 'filled', withArrow: true })
        .pagination_block_wrapper
          h3.pagination_block_wrapper_label pagination
          +pagination({ numberOfPages: 15, description: '1 – 12 из 100+ вариантов аренды' })
    .row
      .col
        .dropdown_multiple_items_wrapper
          -
            items = [
              { itemLabel: 'Спальни', itemCount: 2 },
              { itemLabel: 'Кровати', itemCount: 2 },
              { itemLabel: 'Ванные комнаты', itemCount: 0 },
            ];

          span.style default
          +dropdown({ label:'dropdown', text: 'Сколько гостей', items, multiple: true })
        .dropdown_multiple_items_expanded_wrapper
          span.style expanded
          +dropdown({ label:'dropdown', text: 'Сколько гостей', items, multiple: true })(class="menu-open")
      .col
        .dropdown_wrapper_expanded
          -
            items = [
              { itemLabel: 'Взрослые', itemCount: 0 },
              { itemLabel: 'Дети', itemCount: 0 },
              { itemLabel: 'Младенцы', itemCount: 0 },
            ];

          +dropdown({ label:'dropdown', text: 'Сколько гостей', items })(class="menu-open")
      .col
        .dropdown_wrapper_expanded
          -
            items = [
              { itemLabel: 'Взрослые', itemCount: 2 },
              { itemLabel: 'Дети', itemCount: 1 },
              { itemLabel: 'Младенцы', itemCount: 0 },
            ];

          +dropdown({ label:'dropdown', text: 'Сколько гостей', items })(class="menu-open")
    .row
      .col
        .expandable_checkbox_wrapper
          -
            list = [
              { label:'Завтрак' },
              { label:'Письменный стол', checked: true },
              { label: 'Стул для кормления', checked: true },
              { label: 'Кроватка', checked: true },
              { label: 'Телевизор' },
              { label: 'Шампунь' },
              { label: 'Телевизор' },
              { label: 'Шампунь' },
            ];

          +checkboxList({ checkboxLabel: 'expandable checkbox list', list, expandable: true, closed: true })
        .expandable_checkbox_wrapper
          +checkboxList({ checkboxLabel: 'expandable checkbox list', list, expandable: true })
      .col
        .rich_checkbox_buttons
          -
            list = [
              { label: 'Широкий коридор', description: 'Ширина коридоров в номере не\u00A0менее 91 см.', checked: false },
              { label: 'Помощник для инвалидов', description: 'На 1 этаже вас встретит специалист и проводит до номера.' },
            ];

          +checkboxList({ checkboxLabel: 'rich checkbox buttons', list, rich: true })
      .col
        .bullet_list_wrapper
          h3.bullet_list_label bullet list
          -
            const itemList = [
              { label: 'Нельзя с питомцами' },
              { label: 'Без вечеринок и мероприятий' },
              { label: 'Время прибытия — после 13:00, а выезд до 12:00' },
            ];

          +bulletList({ itemList })
    .row
      .col
        .icon_item_list_wrapper
          .icon_item_list
            +iconItem({
              icon: 'insert_emoticon',
              label: 'Комфорт',
              description: 'Шумопоглощающие стены',
              })
            +iconItem({
              icon: 'location_city',
              label: 'Удобство',
              description: 'Окно в каждой из спален',
            })
      .col
        .comment_block_wrapper
          +commentBlock({
            name: 'Мурад Сарафанов',
            date: '5 дней назад',
            comment: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
            likes: { count: '12', checked: true },
          })
